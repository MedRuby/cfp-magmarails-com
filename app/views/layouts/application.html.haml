!!!
%html
  %head
    %title MagmaConf : Call For Papers
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0 maximum-scale=1.0'}
    = stylesheet_link_tag    'cfp/application', :media => 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    %link{ rel: 'stylesheet', href: 'http://fonts.googleapis.com/css?family=Roboto:400,100,300|Oswald:400,300,700&subset=latin' }
  %body
    %section#home-top.container
      .row
        .centered-seven
          = image_tag 'cfp.svg', alt: 'Call for papers'
          = image_tag 'mask.svg', alt: 'Mask of magma', class: 'mask'

      = yield

    #home-down.container
      .row
        .twelve-columns
          %footer
            %p
              = image_tag 'crowd.svg', alt: 'Crowd Interactive Logo'
              %span
                &copy;
                = t('copyright')
