!!!
%html
  %head
    %title MagmaConf: Call For Papers
    = stylesheet_link_tag "//netdna.bootstrapcdn.com/twitter-bootstrap/2.2.1/css/bootstrap-combined.min.css"
    = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/jquery/1.8.3/jquery.min.js"
    = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.4.2/underscore-min.js"
    = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/backbone.js/0.9.2/backbone-min.js"

    = stylesheet_link_tag    "cfp/application", :media => "all"
    = javascript_include_tag "cfp/application"
    = csrf_meta_tags
    %link{href: 'http://fonts.googleapis.com/css?family=Open+Sans', rel: 'stylesheet', type: 'text/css'}

    = yield :scripts

  %body
    .wrapper
      %header.row
        .container
          .span10.offset1
            .row
              .span4
                %img{src: '/assets/call_for_papers.png', alt: 'Call for papers'}
                %img.magma_conferences_logo{src: '/assets/magma_conferences.png', alt: 'Magma Conferences'}
              .span6
                %ul
                  %li= link_to t('proposals.proposals'), proposals_path
                  %li= link_to t('profile.profile'), profile_path
                  %li= link_to "Sign out", "/signout"
      .container
        .row
          .span10.offset1
            .row
              = yield
      .push
    .container
      .span12
        .row
          %footer
            %p
              %img{src: '/assets/crowd_logo_footer.png', alt: 'Crowd Interactive Logo'}
              %span &copy; 2013, This site is protected by Copyright. Under U.S and international law. All rights reserved.
