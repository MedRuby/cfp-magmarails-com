.profile-in
  %header
    = link_to 'http://magmaconf.com' do
      = image_tag 'logo_magmaconf.png', class: 'magma_logo', alt: 'Magma Conference'
  .line
  %h4= t('profiles.profile')
  .pic
    = image_tag current_user.gravatar_url(size: 150, default: reylero_fallback)
  .name
    = current_user.name
  .company
    = current_user.profile_company
  .email
    = current_user.profile_email
  - unless profile_new?
    .complete
      = link_to t('profiles.edit'), edit_profile_path
  .cfp-logo
    = image_tag 'logo_callforpapers_perfil.png'
