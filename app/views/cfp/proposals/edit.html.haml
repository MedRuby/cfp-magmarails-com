- content_for :header_title do
  = "Update Proposal: #{@proposal.title}"

.eight-columns
  = form_for @proposal do |form|
    %fieldset.blue-background
      = render 'form', form: form

    .btn-aro.upper
      = form.submit 'Update', class: 'aro'

.one-column.days-left
  %p= t('devise.proposals.num')
  %span= t('devise.proposals.days')
