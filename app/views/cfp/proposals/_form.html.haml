%fieldset.form-with-errors{ class: klass }
  .nine-columns.required
    = form.label :title, t('proposals.attributes.title')
    .error.left-arrow ! This field is required
    = form.text_field :title, required: 'true'
  .six-columns.required
    = form.label :level, t('proposals.attributes.level')
    = form.select :level, Cfp::Proposal::TALK_LEVEL.collect {|l| [t(l, scope: 'proposals.levels'), l]}, prompt: 'Please select...'
    .error.left-arrow ! This field is required
  .six-columns.required
    = form.label :language, t('proposals.attributes.language')
    = form.select :language, Cfp::Proposal::LANGUAGE, prompt: 'Please select...'
    .error.left-arrow ! This field is required
  -#.four-columns
    -#= form.label :tags, t('proposals.attributes.tags')
    -#= form.text_field :tags, placeholder: t('helpers.placeholder.proposal.tags')
  .seven-columns.required
    = form.label :description, t('proposals.attributes.description')
    .error.left-arrow ! This field is required
    = form.text_area :description, rows: 8, placeholder: t('helpers.placeholder.proposal.description'), required: 'true'
  .five-columns.required
    = form.label :abstract, t('proposals.attributes.abstract')
    .error.left-arrow ! This field is required
    = form.text_area :abstract, rows: 8, placeholder: t('helpers.placeholder.proposal.abstract'), required: 'true'

- content_for :scripts do
  :coffee
    $ -> new Cfp.FormValidation $('form')
