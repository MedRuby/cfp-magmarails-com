// LISTS

#popup_back
#cont_lists
  .listss.container
    .row
      .six-centered
        = image_tag 'direction-top.svg', class: 'lists_close'
        %p.lists_close= t('proposals-list.hide')
  .content.container
    %header.row
      .twelve-columns
        %h2= t('proposals-list.header.title')
      .twelve-columns.lines
    %aside.row
      .eight-columns
        %h5= t('proposals-list.content.proposal')
      .four-columns
        %h5= t('proposals-list.content.tags')
      .twelve-columns.line
    - @propos.each do |proposal|
      %main.row
        .one-column
          %span.num= @num = @num + 1
        .seven-columns
          %span.title= proposal.title
        .four-columns
          %span.tag= proposal.tags
        .twelve-columns.line
    .row
      %nav.centered-six
        = will_paginate @propos
    %footer.row
      .centered-six
        = image_tag 'crowd-1.svg'
      .centered-five
        %span
          &copy;
          = t('copyright')
