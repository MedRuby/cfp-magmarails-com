.popup_background
.popup_wrapper
  #my_modal
    %h2= t('popup.title')
    #tabs
      %ul
        %li
          = link_to 'MagmaConf', '#tabs-1'
        %li
          = link_to 'Topics', '#tabs-2'
        %li
          = link_to 'Sponsors', '#tabs-3'
        %li
          = link_to 'Judges', '#tabs-4'
        %li
          = link_to 'Terms', '#tabs-5'
      #tabs-1
        %p
          %span= t('popup.body.one.bold_1')
          = t('popup.body.one.plus')
          %span= t('popup.body.one.bold_2')
          = t('popup.body.one.during')
          %span= t('popup.body.one.bold_3')
        %p= t('popup.body.two')
        %p= t('popup.body.three')
      #tabs-2
        %p content for page 2
      #tabs-3
        %p content for page 3
      #tabs-4
        %p content for page 4
      #tabs-5
        %p content for page 5
    .btn-aro
      %button.my_modal_close.aro
        = t('popup.button')

:javascript
  $(document).ready(function(){
    $('#tabs').tabs();
  });
