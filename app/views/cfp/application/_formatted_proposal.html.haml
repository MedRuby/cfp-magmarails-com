.nine-columns.gray-background.proposal-show
  .three-columns.offset-nine
    %menu.menu
      - if @proposal.can_be_edited_by? current_user and !current_user.can_review?
        = link_to 'Edit', edit_proposal_path(@proposal)
        = link_to 'Delete', proposal_path(@proposal), method: 'delete', confirm: t('delete_confirm')
      = link_to 'X', proposals_path

  .twelve-columns
    %header
      %h3 Title
      %p.title= @proposal.title
      %p.tags= "Tags: #{@proposal.tags}"
    .content
      %h3 Description
      = @proposal.abstract_html

      %h3 Notes
      = @proposal.description_html
    - if current_user.can_review?
      %footer
        %h3 About the author
        .image
          = image_tag '/assets/github.svg'
        .info
          %p.name Fulano de tal
          %p From Crowd Interactive
          =link_to 'Github profile', '#'

